{
    "name": "anf",
    "version": "0.1.2",
    "description": "Analysis Normal Form (ANF) for JavaScript and TypeScipt projects.",
    "main": "index.js",
    "bin": {
        "anf": "build/bin/anf.js"
    },
    "scripts": {
        "clean": "rm -rf ./build",
        "compile": "npx tsc && chmod +x ./build/bin/*",
        "copy-files": "mkdir -p build/schema && cp -R src/schema/*.sql build/schema/",
        "build": "npm run clean && npm run compile && npm run copy-files",
        "package": "npm run build && npm pack",
        "test": "jest",
        "test-watch": "nodemon --watch '{src,test}/**' --ext 'ts,md,json' --exec 'npx jest'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/preston/anf.git"
    },
    "keywords": [
        "analysis",
        "normal",
        "form",
        "anf",
        "postgres",
        "postgresql",
        "relational",
        "database",
        "schema",
        "parquet"
    ],
    "author": "Preston Lee",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/preston/anf/issues"
    },
    "homepage": "https://github.com/preston/anf#readme",
    "dependencies": {
        "commander": "^9.4.1",
        "parquets": "^0.10.10"
    },
    "devDependencies": {
        "@types/jest": "^29.2.4",
        "@types/node": "^18.11.11",
        "nodemon": "^2.0.20",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.3"
    }
}
